<Window x:Class="CodeSearcher.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeSearcher.App"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:wpf="clr-namespace:ConsoleControl.WPF;assembly=ConsoleControl.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="OnMainWindowLoaded"
        Closing="OnMainWindowClosing">

    <DockPanel>
        
        <StatusBar DockPanel.Dock="Bottom" MinHeight="23">
            <StatusBarItem>
                <TextBlock Name="StatusBarTextBox" Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="23" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Margin="1" Name="NewIndexButton" Click="NewIndexButtonClick">New Index</Button>
                <Button Margin="1" IsEnabled="false" Name="DeleteIndexButton" Click="DeleteIndexButtonClick">Delete Index</Button>
            </StackPanel>

            <TreeView Grid.Column="0" Grid.Row="1" Name="IndexTreeView" SelectedItemChanged="IndexTreeViewSelectedItemChanged" />

            <TreeView Grid.Column="0" Grid.Row="2" Name="FindingTreeView" SelectedItemChanged="FindingTreeViewSelectionItemChanged"/>

            <TextBox Grid.Column="1" Grid.Row="0" Name="SearchTextBox" KeyDown="SearchTextBoxKeyDown"></TextBox>

            <TabControl Grid.Column="1" Grid.Row="1" Grid.RowSpan="2">
                <TabItem Header="Code Viewer">
                    <avalonedit:TextEditor SyntaxHighlighting="C#" ShowLineNumbers="True"  Name="TextEditor"/>
                </TabItem>
                <TabItem Header="Diagnostic Console">
                    <wpf:ConsoleControl Name="DiagConsole" />
                </TabItem>
            </TabControl>
        </Grid>

    </DockPanel>
</Window>
